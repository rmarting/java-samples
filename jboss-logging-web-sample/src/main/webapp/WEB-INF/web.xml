<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>JBoss Logging Web Application</display-name>
	<servlet>
		<servlet-name>JBossLoggingServlet</servlet-name>
		<servlet-class>com.redhat.samples.web.JBossLoggingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JBossLoggingServlet</servlet-name>
		<url-pattern>/JBossLoggingServlet</url-pattern>
	</servlet-mapping>
</web-app>
